<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/mainbg"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/followersBg"
        android:id="@+id/toolbar"
        >

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtWelcome"
        android:text="Welcome,"
        android:textSize="22dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageButton
                android:id="@+id/btnhuruf"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:background="@drawable/huruff"
                android:layout_marginRight="20dp"/>

            <ImageButton
                android:id="@+id/btnhewan"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:background="@drawable/kumbang"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            >

            <ImageButton
                android:id="@+id/btnkendaraan"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:background="@drawable/mobil"
                android:layout_marginRight="20dp"/>

            <ImageButton
                android:id="@+id/btnwarna"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:background="@drawable/colours"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>